class Solution {
public:
int maxProfit(vector<int> &prices) {    
    int profit = 0;
    int minPrice = prices.front();
    for(int i = 0; i < prices.size(); i++){        
        if (minPrice > prices[i])
            minPrice = prices[i];
        if (profit < prices[i] - minPrice)
            profit = prices[i] - minPrice;
    }
    return profit;
}
};
